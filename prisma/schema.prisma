generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Create Models

model Utilisateur {
  id Int @id @default(autoincrement())
  nom String 
  prenom String
  adresse  String
  telephone  Int @unique
  email String @unique
  password String
  confirmationCode  String 
  isConfirmed       Boolean  @default(false)

  revenuMensuelle RevenuMensuelle[]
  depenses Depenses[]
}

model RevenuMensuelle {
  id Int @id @default(autoincrement())
  montant Int
  date DateTime @default(now())

  idUtilisateur Int
  utilisateur Utilisateur @relation(fields: [idUtilisateur], references: [id])
}

model Depenses {
  id Int @id @default(autoincrement())
  categories String 
  montant Int
  date DateTime @default(now())
  heure DateTime @default(now())

  idUtilisateur Int
  utilisateur Utilisateur @relation(fields: [idUtilisateur], references: [id])

}
